<!DOCTYPE html>
<html>
  <head>
    <title>BiddingApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if flash.any? %>
     <hr>
     <% if flash[:notice] %>
       <div class="flash-notice"><%= flash[:notice] %></div>
     <% elsif flash[:alert] %>
       <div class="flash-alert"><%= flash[:alert] %></div>
     <% end %>
     <hr>
   <% end %>
    <%= yield %>
  </body>
</html>
